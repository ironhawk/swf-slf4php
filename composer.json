{
    "name": "swf/slf4php",
    "description": "SWF logging facade for php - inspired by slf4j / logback / log4j java projects",
    "version": "1.0.0",
    "keywords": ["logging", "log", "facade"],
    "homepage": "https://github.com/ironhawk/swf-slf4php",
    "license": "Apache-2.0",
    "authors": [
    	{
    		"name": "Attila Wind (ironhawk)",
    		"email": "attilaw@swf.technology",
    		"homepage": "http://www.linkedin.com/in/attilaw",
    		"role": "Developer"
    	}
    ],
    "support": {
    	"source": "https://github.com/ironhawk/swf-slf4php",
    	"issues": "https://github.com/ironhawk/swf-slf4php/issues",
    	"wiki": "https://github.com/ironhawk/swf-slf4php/wiki"
    },
    "require": {
        "php": ">= 5.3.0",
        "psr/log": "1.0.*",
        "monolog/monolog" : "1.0.*"
    },
    "require-dev": {
    	"behat/behat" : "3.0.*",
    	"phpunit/phpunit": "~4.8"
    },
    "autoload": {
        "psr-4": {
        	"swf\\" : "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
        	"examples", "tests"
        ]
	},
    "config": {
        "bin-dir": "bin"
    }	
}
